block scripts
  script.
      var map;

      function initMap() {
          map = new google.maps.Map(document.getElementById('map'), {
              center: {
                  lat: 55.796963,
                  lng: 37.537644,
              },
              gestureHandling: 'cooperative',
              clickableIcons: true,
              disableDoubleClickZoom: false,
              draggable: true,
              keyboardShortcuts: true,
              zoom: 15,
              maxZoom: 20,
              minZoom: 0,
              mapTypeId: 'roadmap'
          });

          (function () {
              var markerOptions = {
                  url: 'https://snazzy-maps-cdn.azureedge.net/assets/marker-6b6764d5-90cc-42d9-ab88-8b88c429241f.png',
                  map: map,
                  position: {
                      lat: 55.797112,
                      lng: 37.537531
                  },
                  optimized: true
              };

              var marker = new google.maps.Marker(markerOptions);

          })();
      }
  script(src='https://maps.googleapis.com/maps/api/js?key=&callback=initMap' async defer)