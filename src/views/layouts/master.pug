include ../../blocks/icon/icon
include ../../common/functions/makeMods

block vars
  -
    let title = 'Креативное агентство Kemistry';
    let description = 'Креативная лаборатория Kemistry создана в 2014 году в партнерстве легендарным международным агентством Crispin Porter + Bogusky.';

doctype html
html(lang='ru')
  head
    title= title
    meta(http-equiv='X-UA-Compatible', content='text/html', charset='utf-8')
    meta(name='description' content=description)
    meta(name='viewport' content='width=device-width')
    link(href='./css/styles.css' rel='stylesheet')
    link(href='./favicon-32x32.png' sizes='32x32' type='image/png' rel='icon')
    link(rel='apple-touch-icon' sizes='180x180' href='/apple-touch-icon.png')
    meta(name='theme-color' content="#feabef")

  body
    .l-page
      .l-page__inner
        block content

      include ../../blocks/footer/footer

    block addContent

    script(src='./scripts/app.js')

    block scripts